{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@*": ["*"],
      "@api": ["./api/*"],
      "@assets": ["./assets/*"],
      "@components": ["./components/*"],
      "@constants": ["./constants/*"],
      "@environments": ["./environments/*"],
      "@hooks": ["./hooks/*"],
      "@models": ["./models/*"],
      "@navigations": ["./navigations/*"],
      "@screens": ["./screens/*"],
      "@store": ["./store/*"],
      "@utils": ["./utils/*"]
    }
  }
}
